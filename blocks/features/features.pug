mixin features(items)
	+b.SECTION.features
		svg(xmlns="http://www.w3.org/2000/svg", style="display:none;")
			symbol(id="feature", viewBox="0 0 26 26")
				path(d="m.3,14c-0.2-0.2-0.3-0.5-0.3-0.7s0.1-0.5 0.3-0.7l1.4-1.4c0.4-0.4 1-0.4 1.4,0l.1,.1 5.5,5.9c0.2,0.2 0.5,0.2 0.7,0l13.4-13.9h0.1v-8.88178e-16c0.4-0.4 1-0.4 1.4,0l1.4,1.4c0.4,0.4 0.4,1 0,1.4l0,0-16,16.6c-0.2,0.2-0.4,0.3-0.7,0.3-0.3,0-0.5-0.1-0.7-0.3l-7.8-8.4-.2-.3z")
		+e.DIV.wrap(class="wrapper")
			+e.H2.title(class="titles") Features
			+e.DIV.row
				+e.FIGURE.figure
					+e.IMG.img(src="img/features/iphone5-ipad.png", alt="iphone5 & ipad image")
				+e.UL.list
					each item in items
						+e.item
							+e.DIV.icon-wrap
								+e.SVG.icon(width="24", height="24")
									use(xlink:href="#feature")
							+e.H3.caption= item.caption
							+e.P.text= item.text
					+e.item
						+b.A.btn(class="--filled features__btn", href="#") Learn more